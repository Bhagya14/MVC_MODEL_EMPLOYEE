@model IEnumerable<MVC_Model_Employee.Models.EmployeeProjectionModel>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>search</title>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/bootstrap")
    @Styles.Render("~/Content/css")
</head>
<body>
    <div align="center">
        @using (Html.BeginForm("search", "employee", FormMethod.Post, 
            new { @class = "container", @style = "text-align:left;width:30%;" }))
        {
            <div class="form-group">
                <label class="form-control-static">search key:</label>
                <input type="text" id="key" name="key" class="form-control" />

            </div>
            <div class="form-group">
                <input type="submit" value="search" class="btn-danger" />
            </div>
        }
        <table class="table" style="width:70%">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.employeeid)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.employeename)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.employeegender)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.employeeimageaddress)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.employeeid)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.employeename)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.employeegender)
                    </td>
                    <td>
                        <img height="100px;" width="200px" src=@item.employeeimageaddress />
                    </td>
                    <td>
                        @Html.ActionLink("View details", "Find", "Employee", new { id = item.employeeid }, null)
                    </td>
                </tr>
            }

        </table>
        </div>
</body>
</html>
